<html>
<head>
  <meta charset="UTF-8">
  <title><%= @title %></title>
</head>
<body>
  <table>
    <thead>
      <th>id</th>
      <th>name</th>
      <th>val</th>
    </thead>
    <tbody>
      <% @numbers.each do |number| %>
        <tr>
          <td><%= number.id %></td>
          <td><%= number.name %></td>
          <td><%= number.val %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <form action="/numbers" method="post">
    <p>name</p>
    <input type="text" name="name" />
    <p>val</p>
    <input type="text" name="val" />
    <input type="submit" value="送信">
  </form>
</body>
</html>
